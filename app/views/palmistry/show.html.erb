<h1><%= @uname %> さんの 手相鑑定結果</h1>
<button type="button" class="btn btn-primary" data-toggle="modal" data-target=".bs-example-modal-sm">QRコードを表示する</button>
<div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="result-qrcode">
        <h3>QRコード</h3>
        <center><%= image_tag @qr_url %></center>
      </div>
    </div>
  </div>
</div>
<%= link_to "PDFを表示する", palmistry_path(format: :pdf), class: "btn btn-primary", target: "_blank" %>

